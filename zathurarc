# settings
# for 4K monitor
set window-height 2040
set window-width 1700

#set adjust-open width
# set recolor true
# set recolor-lightcolor #000000
set default-bg "#F2EBD9"
#set show-scrollbars "true"
#set window-title-basename "true"
#set font "monospace normal 20"
set scroll-step 200
set synctex true
set synctex-editor-command "gvim --servername GVIM10000 --remote-silent +exec\ %{line} %{input}"

#set scroll-wrap "true"

set statusbar-bg "#ffd700"
set statusbar-fg "#000000"
set highlight-transparency 0.2

##map and unmap
##map [mode] <binding> <shortcut function> <argument>
##Mode:normal (default); fullscreen; index
##unmap [mode] <binding>
unmap [normal] a
unmap j
unmap k
unmap J
unmap K
unmap t
unmap T
map [normal] j navigate next
map [normal] k navigate previous
map [normal] J scroll down
map [normal] K scroll up
map [normal] t jumplist backward
map [normal] T jumplist forward
map = zoom in
map - zoom out
map q quit
map <F2> adjust_window width
map <F4> adjust_window best-fit
